# ==============================================
# Frontend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# Note: Only variables prefixed with REACT_APP_ are accessible in the browser

# ==============================================
# React Application Configuration
# ==============================================
NODE_ENV=development
PORT=3000
BROWSER=none
FAST_REFRESH=true

# ==============================================
# Backend API Configuration
# ==============================================
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_BACKEND_URL=http://localhost:5000/api

# ==============================================
# n8n Workflow Engine Configuration
# ==============================================
REACT_APP_N8N_URL=http://localhost:5678
REACT_APP_N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ==============================================
# Authentication Configuration
# ==============================================
REACT_APP_JWT_SECRET=your_jwt_secret_key_here
REACT_APP_TOKEN_STORAGE_KEY=autotasker_token
REACT_APP_REFRESH_TOKEN_STORAGE_KEY=autotasker_refresh_token

# ==============================================
# Application Settings
# ==============================================
REACT_APP_APP_NAME=AutoTasker
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION=AI-Powered Workflow Automation Platform

# ==============================================
# UI Configuration
# ==============================================
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#3b82f6
REACT_APP_SECONDARY_COLOR=#1f2937

# ==============================================
# Feature Flags
# ==============================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ENABLE_BETA_FEATURES=false
REACT_APP_ENABLE_DARK_MODE=true

# ==============================================
# External Service URLs
# ==============================================
REACT_APP_DOCS_URL=https://docs.autotasker.com
REACT_APP_SUPPORT_URL=https://support.autotasker.com
REACT_APP_COMMUNITY_URL=https://community.autotasker.com

# ==============================================
# Social Media Integration
# ==============================================
REACT_APP_TWITTER_HANDLE=@autotasker
REACT_APP_GITHUB_URL=https://github.com/your-org/autotasker

# ==============================================
# Monitoring & Analytics
# ==============================================
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_HOTJAR_ID=your_hotjar_id_here
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here

# ==============================================
# Error Reporting
# ==============================================
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_BUGSNAG_API_KEY=your_bugsnag_api_key_here

# ==============================================
# Development Tools
# ==============================================
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# ==============================================
# Build Configuration
# ==============================================
BUILD_PATH=dist
PUBLIC_URL=/

# ==============================================
# Service Status Configuration
# ==============================================
REACT_APP_STATUS_CHECK_INTERVAL=30000
REACT_APP_HEALTH_CHECK_ENABLED=true

# ==============================================
# Workflow Builder Configuration
# ==============================================
REACT_APP_MAX_NODES_PER_WORKFLOW=50
REACT_APP_AUTO_SAVE_INTERVAL=30000
REACT_APP_WORKFLOW_EXPORT_ENABLED=true

# ==============================================
# File Upload Configuration
# ==============================================
REACT_APP_MAX_FILE_SIZE=16777216
REACT_APP_ALLOWED_FILE_TYPES=.txt,.pdf,.png,.jpg,.jpeg,.gif,.doc,.docx

# ==============================================
# Notification Configuration
# ==============================================
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_MAX_NOTIFICATIONS=3

# ==============================================
# WebSocket Configuration
# ==============================================
REACT_APP_WEBSOCKET_URL=ws://localhost:5000/ws
REACT_APP_WEBSOCKET_RECONNECT_INTERVAL=5000

# ==============================================
# Third-party Service Keys (Frontend)
# ==============================================
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_STRIPE_PUBLIC_KEY=your_stripe_public_key

# ==============================================
# Local Storage Keys
# ==============================================
REACT_APP_USER_PREFERENCES_KEY=autotasker_user_preferences
REACT_APP_WORKFLOW_CACHE_KEY=autotasker_workflow_cache
REACT_APP_SETTINGS_KEY=autotasker_settings
