# ==============================================
# n8n Environment Configuration
# ==============================================
# Copy this file to .env.n8n and fill in your actual values

# ==============================================
# n8n Basic Configuration
# ==============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here

# ==============================================
# n8n Server Configuration
# ==============================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/

# ==============================================
# n8n Database Configuration
# ==============================================
DB_TYPE=sqlite
DB_SQLITE_DATABASE=database.sqlite
# For PostgreSQL:
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=your_db_user
# DB_POSTGRESDB_PASSWORD=your_db_password

# ==============================================
# n8n Execution Configuration
# ==============================================
EXECUTIONS_PROCESS=main
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=3600
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_MAX_AGE=168

# ==============================================
# n8n Security Configuration
# ==============================================
N8N_JWT_AUTH_ACTIVE=true
N8N_JWT_AUTH_HEADER=authorization
N8N_JWT_AUTH_HEADER_VALUE_PREFIX=Bearer
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here

# ==============================================
# n8n External Hook Configuration
# ==============================================
N8N_EXTERNAL_HOOK_URLS=http://localhost:5000/webhook/n8n

# ==============================================
# n8n Workflow Configuration
# ==============================================
WORKFLOWS_DEFAULT_NAME=New Workflow
N8N_WORKFLOW_CALLER_POLICY_DEFAULT_OPTION=workflowsFromSameOwner

# ==============================================
# n8n Editor Configuration
# ==============================================
N8N_EDITOR_BASE_URL=http://localhost:5678
N8N_HIDE_USAGE_PAGE=false
N8N_PERSONALIZATION_ENABLED=true

# ==============================================
# n8n Logging Configuration
# ==============================================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console
N8N_LOG_FILE_COUNT_MAX=100
N8N_LOG_FILE_SIZE_MAX=16777216

# ==============================================
# n8n Metrics Configuration
# ==============================================
N8N_METRICS=true
N8N_METRICS_PREFIX=n8n_

# ==============================================
# n8n Push Configuration
# ==============================================
N8N_PUSH_BACKEND=websocket

# ==============================================
# n8n Queue Configuration
# ==============================================
QUEUE_BULL_REDIS_HOST=localhost
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0
QUEUE_BULL_REDIS_PASSWORD=

# ==============================================
# n8n Email Configuration
# ==============================================
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your_email@gmail.com
N8N_SMTP_PASS=your_app_password
N8N_SMTP_SENDER=your_email@gmail.com
N8N_SMTP_SSL=false

# ==============================================
# n8n User Management
# ==============================================
N8N_USER_MANAGEMENT_DISABLED=false
N8N_USER_MANAGEMENT_JWT_SECRET=your_jwt_secret_here
N8N_USER_MANAGEMENT_JWT_DURATION_HOURS=168

# ==============================================
# n8n Public API
# ==============================================
N8N_PUBLIC_API_DISABLED=false
N8N_PUBLIC_API_ENDPOINT=api

# ==============================================
# n8n Telemetry
# ==============================================
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_ONBOARDING_FLOW_DISABLED=false

# ==============================================
# n8n File Storage
# ==============================================
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_STORAGE_PATH=./n8n-binary-data

# ==============================================
# n8n Credentials
# ==============================================
N8N_CREDENTIALS_OVERWRITE_ENDPOINT=http://localhost:5000/credentials

# ==============================================
# n8n Community Nodes
# ==============================================
N8N_COMMUNITY_PACKAGES_ENABLED=true

# ==============================================
# n8n Custom Extensions
# ==============================================
N8N_CUSTOM_EXTENSIONS=./custom

# ==============================================
# n8n Proxy Configuration
# ==============================================
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=

# ==============================================
# n8n License Configuration
# ==============================================
N8N_LICENSE_SERVER_URL=https://license.n8n.io/v1
N8N_LICENSE_ACTIVATION_KEY=your_license_key_here
N8N_LICENSE_TENANT_ID=your_tenant_id_here

# ==============================================
# n8n Performance Configuration
# ==============================================
N8N_GRACEFUL_SHUTDOWN_TIMEOUT=30
N8N_CONCURRENCY=10
